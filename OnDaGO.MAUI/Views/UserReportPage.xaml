<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.UserReportPage"
             Title="Submit a Report">
    <StackLayout Padding="10">
        <Label Text="Report Subject" />
        <Entry Placeholder="Subject" Text="{Binding Subject}" />

        <Label Text="Description" />
        <Editor Placeholder="Describe the issue..." Text="{Binding Description}" />

        <Button Text="Submit" Clicked="OnSubmitReportClicked" />
    </StackLayout>
</ContentPage>
