<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.NewPasswordPage"
             Title="Set New Password">

    <StackLayout Padding="20">
        <Label Text="Enter New Password" FontSize="32" />

        <Entry Placeholder="New Password" IsPassword="True" x:Name="NewPasswordEntry" />
        <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="ConfirmPasswordEntry" />

        <Button Text="Submit" Clicked="OnSubmitClicked" />
    </StackLayout>
</ContentPage>
