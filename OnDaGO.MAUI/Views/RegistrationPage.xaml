<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.RegistrationPage"
             NavigationPage.HasNavigationBar="False"
             Title="RegistrationPage">

    <StackLayout Padding="20">
        <Entry Placeholder="Name" x:Name="NameEntry" />
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />
        <Entry Placeholder="Phone Number" x:Name="PhoneNumberEntry" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Already have an account? Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
