<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.AdminProfilePage"
             Title="Admin Profile"
             
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Profile Card -->
            <Frame Padding="20" Margin="0,5" BackgroundColor="White" CornerRadius="12" HasShadow="True">
                <VerticalStackLayout>
                    <Label x:Name="NameLabel" FontSize="26" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#2C3E50"/>
                    <Label x:Name="EmailLabel" FontSize="18" HorizontalOptions="Center" TextColor="#34495E"/>
                    <Label x:Name="PhoneNumberLabel" FontSize="18" HorizontalOptions="Center" TextColor="#34495E"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Edit Profile Button -->
            <Button Text="Edit Profile" 
                    Clicked="OnEditProfileClicked" 
                    BackgroundColor="#007ACC" 
                    TextColor="White" 
                    CornerRadius="25" 
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
