<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.AdminSettingsPage"
             Title="AdminSettingsPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Create Admin Account" Clicked="OnCreateClicked" />
        <Button Text="Edit Fare Matrix" Clicked="OnFareClicked" />

        <Button Text="Logout" Clicked="OnLogoutClicked" />
    </VerticalStackLayout>
</ContentPage>