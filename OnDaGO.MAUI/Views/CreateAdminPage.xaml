<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.CreateAdminPage"
             Title="Create Admin">

    <StackLayout Padding="10">
        <Label Text="Name" />
        <Entry x:Name="NameEntry" Placeholder="Enter admin name" />

        <Label Text="Email" />
        <Entry x:Name="EmailEntry" Placeholder="Enter admin email" Keyboard="Email" />

        <Label Text="Password" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" />

        <Label Text="Phone Number" />
        <Entry x:Name="PhoneNumberEntry" Placeholder="Enter phone number" Keyboard="Telephone" />

        <Button Text="Create Admin" Clicked="OnCreateAdminClicked" />

        <Button Text="Back to Settings" Clicked="OnBackClicked" />
    </StackLayout>
</ContentPage>
