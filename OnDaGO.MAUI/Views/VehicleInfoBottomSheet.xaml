<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.VehicleInfoBottomSheet"
             Title="VehicleInfoBottomSheet">
    <Frame BackgroundColor="White"
           CornerRadius="10"
           Padding="10"
           VerticalOptions="End"
           HorizontalOptions="FillAndExpand">
        <StackLayout>
            <Label x:Name="PuvNoLabel" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="OtherDetailsLabel" FontSize="16"/>
            <Button Text="Close" Clicked="OnCloseButtonClicked"/>
        </StackLayout>
    </Frame>
</ContentPage>