<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.LoginPage"
             Title="LoginPage"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*, Auto">
        <!-- Background Gradient -->
        <Image Grid.RowSpan="2" Aspect="AspectFill" Source="gradient.png"/>

        <!-- Logo -->
        <Image 
            Grid.Row="0"
            Source="ondagologonobg.png" 
            HorizontalOptions="Center"
            HeightRequest="210"
            WidthRequest="260"/>

        <!-- Bottom Sheet for Login Form -->
        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0"
                Margin="0, -40, 0, 0"
                HeightRequest="500">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30,30,0,0"/>
                <!-- Top corners rounded, bottom corners square -->
            </Border.StrokeShape>

            <ScrollView>
                <StackLayout Padding="30" Spacing="20">
                    <Label Text="Welcome!" 
                           FontSize="32" 
                           FontFamily="NunitoRegular"
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="#333"/>

                    <Entry Placeholder="Email" 
                           x:Name="EmailEntry" 
                           Keyboard="Email"
                           TextColor="#333"
                           PlaceholderColor="#999"
                           FontSize="18"/>

                    <Entry Placeholder="Password" 
                           x:Name="PasswordEntry" 
                           IsPassword="True"
                           TextColor="#333"
                           PlaceholderColor="#999"
                           FontSize="18"/>

                    <!-- Show Password Toggle -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                        <CheckBox x:Name="ShowPasswordCheckBox" CheckedChanged="OnShowPasswordCheckedChanged"/>
                        <Label Text="Show Password" VerticalOptions="Center"/>
                    </StackLayout>

                    <!-- Error Label -->
                    <Label x:Name="ErrorLabel"
                           TextColor="Red"
                           FontSize="14"
                           HorizontalOptions="Center"
                           IsVisible="False"/>

                    <ActivityIndicator 
                            x:Name="LoginActivityIndicator"
                            IsVisible="False"
                            IsRunning="False"
                            Color="#efbb6b"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            HeightRequest="50"
                            WidthRequest="50" />

                    <!-- Login Button -->
                    <Button Text="Login"
                            x:Name="LoginButton"
                            Clicked="OnLoginClicked"
                            BackgroundColor="#efbb6b"
                            TextColor="White"
                            CornerRadius="20"
                            HeightRequest="50"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand"/>

                    <!-- Footer Buttons -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                        <Button Text="Forgot Password?"
                                Clicked="OnForgotPasswordClicked"
                                TextColor="#efbb6b"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                FontSize="16"/>

                        <Button Text="Register"
                                Clicked="OnRegisterClicked"
                                TextColor="#efbb6b"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                FontSize="16"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>