<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.ResetTokenPage"
             Title="Reset Password">

    <StackLayout Padding="20">
        <Label Text="Enter Email, Reset Token and New Password" FontSize="32" />

        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Reset Token" x:Name="TokenEntry" />
        <Entry Placeholder="New Password" IsPassword="True" x:Name="NewPasswordEntry" />

        <Button Text="Reset Password" Clicked="OnResetPasswordClicked" />
    </StackLayout>
</ContentPage>
