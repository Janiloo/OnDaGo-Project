<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnDaGO.MAUI.Views.ProfilePage"
             Title="ProfilePage">

    <StackLayout Padding="20">
        <Label x:Name="NameLabel" FontSize="18" />
        <Label x:Name="EmailLabel" FontSize="18" />
        <Label x:Name="PhoneNumberLabel" FontSize="18" />

        <!-- Edit Profile Button -->
        <Button Text="Edit Profile" Clicked="OnEditProfileClicked" />
    </StackLayout>
</ContentPage>
